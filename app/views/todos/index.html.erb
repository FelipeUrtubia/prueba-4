<h1>Index de ToDo!</h1>

<div class="container row">
  <% @todos.each do |todo|%>
    <div class="col-sm-3">
      <div class="card">
        <%= image_tag todo.photo, style: 'height: 200px'%>
        <div class="card-body text-center">
          <h5 class="card-title">
            <%= todo.name%>
          </h5>
          <%= link_to todo_path(todo), class:"btn" do%>
            <p>un poco de detalle</p>
          <%end%>
          <%= link_to check_todos_path(todo), class: "btn", method: :check do%>
            <% if todo.done == false %>
              <div class="btn-success">
                <i class="fas fa-check"></i>
                <p>Completar</p>
              </div>
            <% else %>
            <div class="btn-danger">
              <i class="fas fa-times"></i>
              <p>Des-completar</p>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

</div>


